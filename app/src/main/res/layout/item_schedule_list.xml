<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:id="@+id/schedule_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/week_day_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/picture_iv"
            android:layout_toLeftOf="@+id/present_layout"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_toEndOf="@id/picture_iv"
            android:ellipsize="end"
            android:maxLines="1"
            android:hint="Lunes"
            android:gravity="center_vertical"
            android:textSize="24sp"
            android:paddingLeft="8dp"
            android:layout_toStartOf="@+id/present_layout"
            android:paddingStart="8dp"
            tools:ignore="RtlSymmetry" />


        <LinearLayout
            android:id="@+id/present_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:paddingStart="24dp"
            android:paddingRight="24dp"
            android:paddingEnd="24dp">

            <TextView
                android:id="@+id/init_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="28sp"
                android:text="19:00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="28sp"
                android:text=" a "/>

            <TextView
                android:id="@+id/end_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="28sp"
                android:text="20:10"/>

        </LinearLayout>


    </RelativeLayout>






</android.support.v7.widget.CardView>
