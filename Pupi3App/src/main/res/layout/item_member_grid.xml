<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pupitre_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/colorMenu"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:id="@+id/member_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|center_vertical">


        <ImageView
            android:id="@+id/picture_iv"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/ic_absent_gray"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/user_image" />

        <TextView
            android:id="@+id/lastname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picture_iv"
            android:textAppearance="?attr/textAppearanceListItem"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            tools:ignore="UnknownIdInLayout" />

        <TextView
            android:id="@+id/names_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lastname_tv"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:ignore="UnknownIdInLayout" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>


